@{
    ViewData["Title"] = "Delete Application";
}

@model TaskResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the @Model.task record?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Quadrants" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="taskId" />
</form>