@{
    ViewData["Title"] = "Quadrants";
}
@model List<TaskResponse>

<div class="row">
    <div class="col-md-6">
        <h2>Quadrant 1</h2>
        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                <tr>
                    <td>Task</td>
                    <td>Due Date</td>
                    <td>Complete</td>
                    <td>Category</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Where(r => r.quadrant == 1))
                {
                    <tr>
                        <td>@x.task</td>
                        <td>@x.dueDate</td>
                        <td>@x.completed</td>
                        <td>@x.category.categoryName</td>
                        <td><a asp-controller="Home" asp-action="Edit" asp-route-taskId="@x.taskId">Edit</a></td>
                        <td><a asp-controller="Home" asp-action="delete" asp-route-taskId="@x.taskId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
